{
  "name": "skorporaal.11ty",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "clean:11ty": "del-cli _site",
    "clean:esbuild": "del-cli src/**/*.out.{js,js.map}",
    "clean:postcss": "del-cli src/**/*.out.css",
    "dev:11ty": "eleventy --serve --watch",
    "dev:esbuild": "esbuild src/_assets/script/app.ts --bundle --watch --sourcemap=inline --outfile=src/static/app.out.js",
    "dev:typescript": "tsc --watch -noEmit",
    "dev:postcss": "postcss --ext .out.css src/_assets/**/*.css -d src/static/ --watch --verbose",
    "build:11ty": "eleventy",
    "build:postcss": "postcss --ext .out.css --env production src/_assets/**/*.css -d _site/static/",
    "build:esbuild": "esbuild src/_assets/script/app.ts --bundle --minify --outfile=_site/static/app.out.js",
    "build:typescript": "tsc -noEmit",
    "format:prettier": "prettier --write ./src/**/*",
    "clean": "npm-run-all --parallel clean:*",
    "dev": "npm-run-all --parallel dev:*",
    "dev-clean": "npm-run-all clean build:* --parallel dev:*",
    "build": "npm-run-all clean --parallel build:*",
    "format": "npm-run-all format:*",
    "start": "npm run dev"
  },
  "devDependencies": {
    "@11ty/eleventy": "^1.0.1",
    "@11ty/eleventy-plugin-syntaxhighlight": "^4.0.0",
    "@tailwindcss/typography": "^0.5.2",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@typescript-eslint/parser": "^5.25.0",
    "autoprefixer": "^10.4.7",
    "cssnano": "^5.1.8",
    "del-cli": "^4.0.1",
    "esbuild": "^0.14.39",
    "eslint": "^8.15.0",
    "html-minifier": "^4.0.0",
    "markdown-it": "^13.0.1",
    "markdown-it-external-links": "^0.0.6",
    "markdown-it-footnote": "^3.0.3",
    "markdown-it-replace-link": "^1.1.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.13",
    "postcss-cli": "^9.1.0",
    "prettier": "^2.6.2",
    "prettier-plugin-tailwindcss": "^0.1.11",
    "tailwindcss": "^3.0.24",
    "typescript": "^4.6.4"
  }
}
