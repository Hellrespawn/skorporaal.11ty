{
  "name": "skorporaal.11ty",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "clean:11ty": "del-cli _site",
    "dev:11ty": "eleventy --serve --watch",
    "build:11ty": "eleventy",
    "clean:esbuild": "del-cli src/**/*.out.js",
    "dev:esbuild": "esbuild src/scripts/app.ts src/scripts/darkMode.ts --bundle --watch --sourcemap=inline --outdir=src/11ty/assets/ --out-extension:.js=.out.js",
    "build:esbuild": "esbuild src/scripts/app.ts src/scripts/darkMode.ts --bundle --minify --outdir=_site/assets/ --out-extension:.js=.out.js",
    "clean:postcss": "del-cli src/**/*.out.css",
    "dev:postcss": "postcss --ext .out.css src/styles/**/*.css -d src/11ty/assets/ --watch --verbose",
    "build:postcss": "postcss --ext .out.css --env production src/styles/**/*.css -d _site/assets/",
    "dev:typescript": "tsc --watch --noEmit",
    "build:typescript": "tsc --noEmit",
    "format:prettier": "prettier --write ./src/**/*",
    "format:eslint": "eslint ./**/*.ts --fix",
    "clean": "npm-run-all --parallel clean:*",
    "dev": "npm-run-all --parallel dev:*",
    "build": "npm-run-all clean --parallel build:*",
    "start": "npm run dev",
    "format": "npm-run-all format:*",
    "lint": "eslint ./**/*.ts",
    "ftp": "node -r @swc-node/register deploy.ts",
    "deploy": "npm-run-all build ftp"
  },
  "devDependencies": {
    "@11ty/eleventy": "^1.0.1",
    "@11ty/eleventy-plugin-syntaxhighlight": "^4.0.0",
    "@swc-node/register": "^1.5.1",
    "@tailwindcss/typography": "^0.5.2",
    "@types/node": "^17.0.36",
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "@typescript-eslint/parser": "^5.26.0",
    "autoprefixer": "^10.4.7",
    "basic-ftp": "^4.6.6",
    "cssnano": "^5.1.9",
    "del-cli": "^4.0.1",
    "dotenv": "^16.0.1",
    "esbuild": "^0.14.42",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "html-minifier": "^4.0.0",
    "katex": "^0.15.6",
    "markdown-it": "^13.0.1",
    "markdown-it-external-links": "^0.0.6",
    "markdown-it-footnote": "^3.0.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.14",
    "postcss-cli": "^9.1.0",
    "prettier": "^2.6.2",
    "prettier-plugin-tailwindcss": "^0.1.11",
    "tailwindcss": "^3.0.24",
    "typescript": "^4.7.2"
  }
}
