{% from "macro.njk" import dot %}

<div class="flex flex-row items-center">
  {% for type, data in categoryData %}
  <button id="{{ type + 'FilterButton'}}" class="button button-dark">
    {{ dot(data.bg) }}
    <span class="pl-2">{{ data.plural }}</span>
  </button>
  {% endfor %}

  <div class="flex-grow"></div>

  <button
    id="sortButton"
    class="button button-medium whitespace-nowrap font-semibold"
  ></button>
</div>
