{% from "macro.njk" import icon %}

<button
  id="darkModeButton"
  tabindex="0"
  class="absolute bottom-8 left-4 cursor-pointer rounded-full md:fixed md:bottom-4"
  aria-label="toggle theme"
>
  <span id="lightModeIcon"> {{ icon('sun', 'theme-shadow') }} </span>
  <span id="darkModeIcon"> {{ icon('moon', 'theme-shadow') }} </span>
</button>
