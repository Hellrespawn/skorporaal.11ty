<% const color = item.data.tags.includes("recipe") ? "bg-accent-500" :
"bg-primary-500" %> <% const date = item.data.date ?
item.data.date.toLocaleDateString(
  'nl-NL',
  {dateStyle: 'short'}
) : "A long time ago..."
%>

<li>
  <a href="<%= item.url %>" class="block overflow-x-hidden whitespace-nowrap border-t border-gray-200 dark:border-gray-700">
    <div class="flex flex-row items-baseline gap-2 py-4 pr-2 transition-[padding-left] duration-100 hover:pl-2">
      <!-- Colored Dot -->
      <div class="<%- color %> inline-block h-2 w-2 shrink-0 rounded-full"></div>

      <!-- Title -->
      <h3 class="flex-grow"><%= item.data.title %></h3>

      <!-- Date -->
      <div class="flex-shrink overflow-hidden text-sm text-zinc-400 dark:text-zinc-500">
        <%= date %>
      </div>
    </div>
  </a>
</li>
