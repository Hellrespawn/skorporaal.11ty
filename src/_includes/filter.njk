{% from "macro.njk" import dot %}

<ul class="flex flex-row">
  {% for category, data in categoryData %}

  <li
    :class="filter !== '{{ category }}' && 'opacity-50'"
    class="py-4 pr-8 transition-[opacity] duration-100 last:pr-0 hover:opacity-75"
  >
    <button @click="toggle('{{ category }}')">
      {{ dot(data.color) }} {{ data.name }}
    </button>
  </li>

  {% endfor %}
</ul>
